def opdracht7():
    name = input("Vul uw naam in: ")
    agestart = int(input("Vul uw geboortejaar in: "))
    age = 2016 - agestart

    print("OPDRACHT7")
    print("Hallo", name, ". In het jaar 2016 was/wordt je", age, ".")


def opdracht8():
    opdr8som = -2 + math.sqrt(math.pow(3, 2) + 4 * 5 * 6) / 2 * 7
    print("OPDRACHT8")
    print(opdr8som)


