def opdracht10():
    Celsius = int(input("Temperatuur in Celsius: "))
    Fahrenheit = 9.0 / 5.0 * Celsius + 32
    print("OPDRACHT10")
    print(Celsius, "graden celsius is gelijk aan", Fahrenheit, "graden fahrenheit.")

def opdracht11():
    agenow = int(input("Vul uw huidige leeftijd in: "))
    print("OPDRACHT11")
    if agenow < 18:
        print("Je mag je rijbewijs nog niet halen")
    else:
        print("Je mag je rijbewijs halen")


def opdracht12():
    cijfer1 = int(input("Geef een cijfer: "))
    cijfer2 = int(input("Geef een tweede cijfer: "))
    cijfer3 = int(input("Geef een derde cijfer: "))
    cijfer4 = int(input("Geef een vierde cijfer: "))
    cijfermax = [cijfer1, cijfer2, cijfer3, cijfer4]
    print("OPDRACHT12")
    print(max(cijfermax))


def opdracht13():
    print("OPDRACHT13")
    rapportcijfer = int(input("Geef een rapportcijfer: "))
    if rapportcijfer < 3:
        print("Het rapportcijfer is een", rapportcijfer, "en dus slecht")
    if rapportcijfer >= 3 or rapportcijfer <= 4:9
        print("Het rapportcijfer is een", rapportcijfer, "en dus onvoldoende")
    if rapportcijfer > 4 or rapportcijfer <= 5:
        print("Het rapportcijfer is een", rapportcijfer, "en dus twijfelachtig")
    if rapportcijfer > 5 or rapportcijfer <= 7:
        print("Het rapportcijfer is een", rapportcijfer, "en dus voldoende")
    if rapportcijfer > 7 or rapportcijfer <= 9:
        print("Het rapportcijfer is een", rapportcijfer, "en dus goed")
    if rapportcijfer > 9 or rapportcijfer <= 10:
        print("Het rapportcijfer is een", rapportcijfer, "en dus uitstekend")


def opdracht14():
    print("OPDRACHT14")
    benjeeenmens = input("Ben je een mens? (ja/nee)")
    if benjeeenmens == "nee":
        print("Je bent een bot")
    else:
        if benjeeenmens == "ja":
            print("Goedemiddag!")
            studeerjeophro = input("Studeer/werk je op HRO?")
            if studeerjeophro == "ja":
                benjeeenstudent = input("Ben je een student?")
                if benjeeenstudent == "ja":
                    print("Je kan nu inloggen op het netwerk")
                else:
                    print("Je kan nu inloggen op het netwerk")
                    hebjeeenwerkkamer = input("Heb je een werkkamer?")
                    if hebjeeenwerkkamer == "ja":
                        print("Je kamerdeur is nu geopend.")
            else:
                print("Sorry, gasten mogen niet inloggen op het HRO netwerk. \n Het keyboard wordt nu gelocked")


def opdracht15():
    character = 1
    print("OPDRACHT15")
    while character <= 10:
        print(character)
        character = character + 1

def opdracht16():
    character = 1
    characteramount = int(input("Geef een maximum"))
    print("OPDRACHT16")
    while character <= characteramount:
        print(character)
        character = character + 1

