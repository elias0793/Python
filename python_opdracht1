def opdracht2():
    H = "H"
    H5 = H + H + H + H + H
    space = " "
    space2 = "  "
    space3 = "   "
    I = "I"

    print("OPDRACHT2")
    print(H + space3 + H + space2 + I)
    print(H + space3 + H)
    print(H + space3 + H + space2 + I)
    print(H5 + space2 + I)
    print(H + space3 + H + space2 + I)
    print(H + space3 + H + space2 + I)
    print(H + space3 + H + space2 + I)


def opdracht3():
    opdr3som = 100 + 200 - 10

    print("OPDRACHT3")
    print(opdr3som)


def opdracht4():
    opdr4soma = 2 + 3
    opdr4somb = 8 * opdr4soma
    opdr4som = opdr4somb + 3

    print("OPDRACHT4")
    print("Het resultaat van 8(2+3)+3 is", opdr4som, "!!!")


def opdracht5():
    opdr5soma = 8 * 10
    opdr5somb = 8.1 + 4.8
    opdr5somc = opdr5soma * opdr5somb
    opdr5somd = 8.5 * opdr5somc
    opdr5som = opdr5somd + 3

    print("OPDRACHT5")
    print("Het antwoord van de berekening is:", opdr5som)


